{
  "name": "lesphp/psr4-converter",
  "description": "A tool to automatically converts PSR-0 and non-standard autoload to PSR-4.",
  "keywords": [
    "PSR-0",
    "PSR-4",
    "namespace",
    "autoload",
    "convert"
  ],
  "license": "MIT",
  "bin": ["bin/psr4-converter"],
  "autoload": {
    "psr-4": {
      "LesPhp\\PSR4Converter\\": "src/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "nikic/php-parser": "^4.13",
    "symfony/console": "^7.0",
    "symfony/finder": "^7.0",
    "symfony/serializer": "^7.0",
    "symfony/property-info": "^7.0",
    "symfony/filesystem": "^7.0",
    "lesphp/property-info-typed-array": "^6.0",
    "symplify/astral": "^10.2",
    "phpstan/phpdoc-parser": "^1.5",
    "symfony/property-access": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
